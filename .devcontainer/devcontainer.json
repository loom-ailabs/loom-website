{
  "name": "Loom Website",
  "image": "loom-dev-base:latest",
  "remoteUser": "node",
  "mounts": ["source=loom-ssh-vol,target=/home/node/.ssh,type=volume"],
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Loom Docs",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "remote.extensionKind": {
          "oxc.oxc-vscode": ["workspace"]
        },
        "[javascript]": {
          "editor.defaultFormatter": "oxc.oxc-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "oxc.oxc-vscode"
        },
        "[javascriptreact]": {
          "editor.defaultFormatter": "oxc.oxc-vscode"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "oxc.oxc-vscode"
        },
        "[json]": {
          "editor.defaultFormatter": "oxc.oxc-vscode",
          "editor.formatOnSave": true
        },
        "[jsonc]": {
          "editor.defaultFormatter": "oxc.oxc-vscode",
          "editor.formatOnSave": true
        },
        "[css]": {
          "editor.defaultFormatter": "vscode.css-language-features",
          "editor.formatOnSave": true
        },
        "editor.formatOnSave": true,
        "json.format.enable": false,
        "biome.enabled": false,
        "eslint.enable": false,
        "prettier.enable": false,
        "oxc.enable": true,
        "editor.defaultFormatter": "oxc.oxc-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.oxc": "explicit"
        }
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh"
}
